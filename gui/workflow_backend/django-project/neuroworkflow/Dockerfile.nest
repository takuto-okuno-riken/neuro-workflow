FROM nest/nest-simulator:3.7

# Override the default ENTRYPOINT to allow CMD to work
ENTRYPOINT []

# basic dependency packages
RUN apt-get update && \
    apt-get install -y --no-install-recommends \
    curl \
    gnupg \
    build-essential \
    git \
    python3 \
    python3-pip \
    python3-dev \
    unzip \
    && rm -rf /var/lib/apt/lists/*

# Install Miniconda
ENV CONDA_DIR=/opt/conda
ENV CONDA_AUTO_UPDATE_CONDA=false
RUN curl -sSL https://repo.anaconda.com/miniconda/Miniconda3-latest-Linux-x86_64.sh -o /tmp/miniconda.sh && \
    bash /tmp/miniconda.sh -b -p $CONDA_DIR && \
    rm /tmp/miniconda.sh && \
    $CONDA_DIR/bin/conda clean -afy

ENV PATH="$CONDA_DIR/bin:${PATH}"

ENV CONDA_PLUGINS_AUTO_ACCEPT_TOS=yes
RUN conda install -y -c conda-forge -c MRtrix3 mrtrix3 libstdcxx-ng

# Update pip
RUN python3 -m pip install --upgrade pip setuptools wheel

# Install JupyterHub + JupyterLab + Notebook
RUN pip install --no-cache-dir \
    jupyterhub \
    jupyterlab \
    notebook

# Commonly used scientific calculation libraries in NEST
RUN pip install --no-cache-dir \
    numpy>=1.20.0 \
    scipy \
    matplotlib>=3.4.0 \
    pandas \
    seaborn>=0.11.0

# Development and testing tools (added from the reference implementation)
RUN pip install --no-cache-dir \
    pytest>=6.0 \
    black \
    isort \
    mypy \
    setuptools>=42 \
    wheel \
    PyJWT \
    aiohttp \
    requests

# Install The Virtual Brain (TVB) libraries
RUN pip install --no-cache-dir tvb-library tvb-framework

# AWS Cli 
RUN curl "https://awscli.amazonaws.com/awscli-exe-linux-x86_64.zip" -o "awscliv2.zip"
RUN unzip awscliv2.zip
RUN ./aws/install

# Create a jovyan user (JupyterLab standard)
RUN useradd -m -s /bin/bash -N -u 1000 jovyan && \
    chown jovyan:users /home/jovyan

# Set NEST Python path as environment variable
ENV PYTHONPATH="/opt/nest/lib/python3.10/site-packages:${PYTHONPATH}"

# Working directory settings
WORKDIR /home/jovyan
USER jovyan

# The entry point that JupyterHub calls as a user server
CMD ["jupyterhub-singleuser"]
